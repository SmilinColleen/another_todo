<%= link_to "new todo", new_todo_path %>
<% @todo_lists.each do |list| %>
  <h2><%= list %></h2>
  <ol>
    <% @todos.each do |todo| %>
      <% if todo.list_name == list %>
        <li>
          <%= link_to "#{todo.title}: #{todo.body}", todo %>
        </li>
      <% end %>
    <% end %>
  </ol>
<% end %>



